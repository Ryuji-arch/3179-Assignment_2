{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Annual Energy Consumption Change (%) by Country",
    "fontSize": 24,
    "font": "Oswald",
    "fontWeight": "bold",
    "anchor": "middle",
    "color": "#333"
  },
  "width": 700,
  "height": 400,
  "params": [
    {
      "name": "year",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1966,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "translateX",
      "value": 0,
      "bind": {
        "input": "range",
        "min": -400,
        "max": 400,
        "step": 10,
        "name": "Move Left/Right: "
      }
    },
    {
      "name": "translateY",
      "value": 0,
      "bind": {
        "input": "range",
        "min": -200,
        "max": 200,
        "step": 10,
        "name": "Move Top/Bottom: "
      }
    },
    {
      "name": "zoom",
      "value": 140,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 800,
        "step": 10,
        "name": "Zoom Level: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "scale": {"signal": "zoom"},
    "translate": [
      {"signal": "400 + translateX"},
      {"signal": "200 + translateY"}
    ]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Ryuji-arch/3179/refs/heads/main/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.NAME", "type": "nominal", "title": "Country"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Ryuji-arch/3179/refs/heads/main/energy-consumption-by-country.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "Code",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Ryuji-arch/3179/refs/heads/main/ne_110m_admin_0_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.ISO_A3",
            "fields": ["properties", "type", "geometry"]
          }
        },
        {"filter": "datum.Year == year"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Annual_change_in_primary_energy_consumption",
          "type": "quantitative",
          "title": "Change from Previous Year (%)",
          "scale": {
            "scheme": "redblue",
            "domainMid": 0,
            "reverse": true
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Annual_change_in_primary_energy_consumption",
            "type": "quantitative",
            "title": "Percentage Change"
          },
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {"labelFontSize": 12, "titleFontSize": 14},
    "axis": {"labelFontSize": 12, "titleFontSize": 14}
  }
}